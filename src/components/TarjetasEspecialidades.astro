<style>

.swiper-content {
  overflow: hidden;
  width: 100%;
  position: relative;
}

.swiper-button-next{
  right: 0;
  color: #f2790c;
}
.swiper-button-prev{
  left: 0;
  color: #f2790c
}

.swiper-slide {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.swiper-slide img {

  object-fit: contain;
  
}


  .swiper-button-next,
  .swiper-button-prev {
    display: block;
  }
  .swiper-button-next{
  right: 20px;

}
.swiper-button-prev{
  left: 20px;

}

  .group .info {
        opacity: 1 !important;
        transform: translateY(0) !important;
        transition: none !important;
    }

    .group:hover .info {
        opacity: 1 !important;
        transform: translateY(0) !important;
    }



.group .info {
        opacity: 0;
        transform: translateY(10px);
        transition: 0.5s ease, transform 0.5s ease;
    }
    
    .group:hover .info {
        opacity: 1;
        transform: translateY(0);
    }
</style>

<script> 

    import Swiper from "swiper/bundle";
    import "swiper/swiper-bundle.css";

  document.addEventListener("DOMContentLoaded", function () {
    var swiper = new Swiper(".carrusel3", {
    slidesPerView: 3,
    slidesPerGroup: 3,
    spaceBetween: 25,
    loop: true,
    speed: 1000,
    centerSlide:'true',
    fade:'true',
    grabCursor:'true',
    pagination: {
      el: ".carrusel-pagination",
      clickable: true,
      dynamicBullets:true,
    },
    navigation: {
      nextEl: ".carrusel3-next",
      prevEl: ".carrusel3-prev",
    },
   autoplay: {
      delay: 5000,
    },
    breakpoints:{
        0:{
            slidesPerView:1,
            slidesPerGroup: 1,
        },
        520:{
            slidesPerView:2,
            slidesPerGroup: 2,
        },
        950:{
            slidesPerView:3,
            slidesPerGroup: 3,
        },
    },
  });
  })

  
</script>
